@{
    ViewData["Title"] = "Welcome to Tiny Clothes";
}

<div class="alert alert-primary alert-dismissible fade show" role="alert">
    Welcome to the <strong>Grand Opening</strong> of Tiny Clothes! To see what we sell go to our <a asp-action="ShowAll" asp-controller="Clothes">Inventory!</a>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="jumbotron">
    <h1 class="display-4">Tiny Clothes</h1>
    <p>Tiny clothes for tiny things but not babies.</p>
</div>

<div class="card" style="width: 18rem;">
    <img src="~/images/DogHomeImage.jpg" class="card-img-bottom" alt="Dog wearing swimming goggles"/>
    <div class="card-body">
        <h5 class="card-title">Our products</h5>
        <p class="card-text">We sell tiny clothes for your pets and stuffed animals. These are not baby clothes!</p>
    </div>
</div>

<p>
    We do not accept returns or give refunds at this time.
    We do not guarantee your baby will/won't be allergic to the clothes.
</p>